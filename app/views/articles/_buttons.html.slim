span.pull-right 
  - if current_user && (article.user == current_user || current_user.admin?)
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_article_path(article), :class => 'btn btn-xs'

    = link_to t('.destroy', default: t("helpers.links.destroy")), article_path(article), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm" )) }, class: 'btn btn-xs btn-danger', remote: true